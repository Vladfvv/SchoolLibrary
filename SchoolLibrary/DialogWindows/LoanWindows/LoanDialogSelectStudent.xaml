<Window x:Class="SchoolLibrary.DialogWindows.LoanWindows.LoanDialogSelectStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLibrary.DialogWindows.LoanWindows"
        mc:Ignorable="d"
       Title="Выбор студента для выдачи книги" Height="400" Width="600">

    <Grid>
        <!-- DataGrid для отображения списка студентов -->
        <DataGrid x:Name="dGrid" AutoGenerateColumns="False" SelectionMode="Single" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Класс" Binding="{Binding StudentClass}" Width="*"/>
                <DataGridTextColumn Header="Дата Рождения" Binding="{Binding DateOfBirth, StringFormat=d}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка для подтверждения выбора студента -->
        <Button Content="Выбрать" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,10,10" Click="SelectButton_Click"/>
    </Grid>
</Window>
