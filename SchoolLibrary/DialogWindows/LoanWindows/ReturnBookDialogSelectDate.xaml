<Window x:Class="SchoolLibrary.DialogWindows.LoanWindows.ReturnBookDialogSelectDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLibrary.DialogWindows.LoanWindows"
        mc:Ignorable="d"
       Title="Выбор даты возврата книги" Height="200" Width="400">

    <Grid>
        <!-- Label для инструкции -->
        <Label Content="Выберите дату возврата:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>

        <!-- DatePicker для выбора даты возврата -->
        <DatePicker x:Name="ReturnDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="200"/>

        <!-- Кнопка для подтверждения выбранной даты -->
        <Button Content="Подтвердить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,10,10" Click="ConfirmButton_Click"/>
    </Grid>
</Window>
