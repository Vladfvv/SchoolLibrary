<Window x:Class="SchoolLibrary.DialogWindows.Operations.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLibrary.DialogWindows.Operations"
        mc:Ignorable="d"
       Title="Информация" Height="150" Width="400">
    <Grid Background="LightYellow" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>           
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageText" Grid.Row="0" Text="Hi" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Margin="30">
            <Button x:Name="Button1" Content="ОК" Width="80" Click="Button1_Click" Style="{StaticResource RoundedButtonStyle}" Margin="0 0 20 0"/>
            <Button x:Name="Button2" Content="Отмена" Width="80"  Click="Button2_Click" Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
