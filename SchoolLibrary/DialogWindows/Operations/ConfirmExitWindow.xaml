<Window x:Class="SchoolLibrary.DialogWindows.Operations.ConfirmExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLibrary.DialogWindows.Operations"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize" Style="{StaticResource {x:Type Window}}" FontSize="16"
       Title="Подтверждение выхода" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Text="Вы действительно хотите выйти из программы?" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Margin="0,15,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Name="btnYes" Content="Да" Width="75" Margin="10" Click="btnYes_Click" Style="{StaticResource RoundedButtonStyle}"/>
            <Button Name="btnNo" Content="Нет" Width="75" Margin="10" Click="btnNo_Click" Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
