<Window x:Class="SchoolLibrary.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLibrary"
        mc:Ignorable="d"
       Title="Add Book" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBox Name="TitleTextBox" Text="Title" Foreground="Gray"/>
            <TextBox Name="AuthorTextBox" Text="Author" Foreground="Gray"/>
            <TextBox Name="PublisherTextBox" Text="Publisher" Foreground="Gray"/>
            <TextBox Name="YearPublishedTextBox" Text="Year Published" Foreground="Gray"/>
            <TextBox Name="ISBNTextBox" Text="ISBN" Foreground="Gray"/>
            <TextBox Name="QuantityTextBox" Text="Quantity" Foreground="Gray"/>
            <Button Content="Add Book" Click="AddBook_Click" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
